<% if @errors.present? %>
  <div class="errors">
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @recipe do |form| %>
  <div class="form-group">
    <%= form.text_field :name, placeholder: "Name" %>
  </div>
  <br>
  <br>
  <div class="form-group">
    <%= form.text_area :description, placeholder: "Description" %>
  </div>
  <br>
  <br>
  <div class="actions">
    <%= form.submit %>
  </div>
  <% end %>
